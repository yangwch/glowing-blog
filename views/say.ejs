<link rel="stylesheet" href="/javascripts/kindeditor/themes/default/default.css" />
<script charset="utf-8" src="/javascripts/kindeditor/kindeditor-min.js"></script>
<script charset="utf-8" src="/javascripts/kindeditor/lang/zh-CN.js"></script>
<form method="post" action="/post/<%=post.uuid%>" class="well form-horizontal center">
	<div class="form-group">
		<label class="col-md-2 control-label">标题</label>
		<div class="col-md-8 form-field">
			<input type="text" class="form-control" name="post" value="<%=post.post%>">
		</div>
	</div>
	<div class="form-group">
		<label class="col-md-2 control-label">内容</label>
		<div class="col-md-8 form-field">
			<textarea class="col-md-8 form-control" rows="20" name="content"><%-post.content%></textarea>
			<p>
				您当前输入了 <span class="word_count2">0</span> 个文字。
			</p>
		</div>
	</div>
	<div class="form-actions col-md-offset-2">

		<button type="submit" class="btn btn-success"><i class="icon-comment icon-white">
		</i> 发言</button>
		<a href="javascript:;" onclick="history.back(-1)" class="btn btn-default">返回</a>
	</div>
</form>

<script>
	KindEditor.ready(function(K) {
		K.create('textarea[name="content"]', {
			uploadJson: '/u/upload_json',
			afterChange : function() {
				K('.word_count1').html(this.count());
				K('.word_count2').html(this.count('text'));
			}
		});
		$("form button[type=submit]").click(function(event){
			if(!$("form input[name=post]").val()){
				alert("请输入标题");
				event.preventDefault();
			}
		})
	});
</script>